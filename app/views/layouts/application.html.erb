<!DOCTYPE html>
<html>
  <head>
    <title>RoR Chat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "RoR Chat", root_path, class: "navbar-brand"%>
          <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li>
              <%= link_to "My Comments", comments_path %>
            </li>
          <% end %>
          </ul>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav navbar-right">
            <%= render 'devise/menu/registration' %>
            <%= render 'devise/menu/login' %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
      <%= render 'layouts/messages' %>
      <div class="col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
